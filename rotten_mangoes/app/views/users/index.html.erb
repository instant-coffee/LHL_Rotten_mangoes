<h1>Rotten Mangoes</h1>
<h2>Users</h2>

<div class="container col-lg-10">
<%= paginate @users %>
<table class="table table-striped">
<% @users.each do |user| %>
  <tr>
  <td><%= link_to "Show user", user_path(user) %></td>
  <td><%= link_to "Impersonate user", create_persona_session_path(id: user.id), method: :post %></td>
  <td><%= link_to "Edit user", edit_admin_user_path(user) %></td>
  <td><%= link_to "Delete", user_path(user), method: :delete %></td>
  <td><%= user.email %></td>
  <td><%= user.firstname %></td>
  <td><%= user.lastname %></td>
  </tr>
<% end %>
</table>
</div>